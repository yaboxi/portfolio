<script>
  document.addEventListener('DOMContentLoaded', function() {
    const themeToggleDarkIcon = document.getElementById('theme-toggle-dark-icon');
    const themeToggleLightIcon = document.getElementById('theme-toggle-light-icon');
    const themeToggleBtn = document.getElementById('theme-toggle');
    const header = document.getElementById('header');
    let lastScrollY = window.scrollY;
    const scrollThreshold = 100; // ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«ã—ãã„å€¤

    if (!themeToggleDarkIcon || !themeToggleLightIcon || !themeToggleBtn || !header) {
      console.error('Theme toggle or header elements not found');
      return;
    }

    // ã‚·ã‚¹ãƒ†ãƒ ã®ã‚«ãƒ©ãƒ¼ãƒ¢ãƒ¼ãƒ‰å¤‰æ›´ã‚’ç›£è¦–
    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', e => {
      if (!('color-theme' in localStorage)) {
        if (e.matches) {
          document.documentElement.classList.add('dark');
          themeToggleDarkIcon.classList.add('hidden');
          themeToggleLightIcon.classList.remove('hidden');
        } else {
          document.documentElement.classList.remove('dark');
          themeToggleDarkIcon.classList.remove('hidden');
          themeToggleLightIcon.classList.add('hidden');
        }
      }
    });

    // åˆæœŸçŠ¶æ…‹ã®è¨­å®š
    if (localStorage.getItem('color-theme') === 'light') {
      document.documentElement.classList.remove('dark');
      themeToggleDarkIcon.classList.remove('hidden');
      themeToggleLightIcon.classList.add('hidden');
    } else {
      document.documentElement.classList.add('dark');
      themeToggleDarkIcon.classList.add('hidden');
      themeToggleLightIcon.classList.remove('hidden');
    }

    themeToggleBtn.addEventListener('click', function() {
      // ã‚¢ã‚¤ã‚³ãƒ³ã®åˆ‡ã‚Šæ›¿ãˆ
      themeToggleDarkIcon.classList.toggle('hidden');
      themeToggleLightIcon.classList.toggle('hidden');

      // ãƒ†ãƒ¼ãƒã®åˆ‡ã‚Šæ›¿ãˆ
      if (document.documentElement.classList.contains('dark')) {
        document.documentElement.classList.remove('dark');
        localStorage.setItem('color-theme', 'light');
      } else {
        document.documentElement.classList.add('dark');
        localStorage.setItem('color-theme', 'dark');
      }
    });

    window.addEventListener('scroll', () => {
      const currentScrollY = window.scrollY;

      // ãƒšãƒ¼ã‚¸ãƒˆãƒƒãƒ—ä»˜è¿‘ã§ã¯ãƒ˜ãƒƒãƒ€ãƒ¼ã‚’è¡¨ç¤º
      if (currentScrollY < scrollThreshold) {
        header.style.transform = 'translateY(0)';
        return;
      }

      // ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«æ–¹å‘ã«å¿œã˜ã¦ãƒ˜ãƒƒãƒ€ãƒ¼ã®è¡¨ç¤º/éè¡¨ç¤ºã‚’åˆ¶å¾¡
      if (currentScrollY > lastScrollY) {
        // ä¸‹ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«æ™‚ã¯éè¡¨ç¤ºï¼ˆãƒã‚¦ã‚¹ãƒ›ãƒãƒ¼æ™‚ã¯é™¤ãï¼‰
        if (!header.matches(':hover')) {
          header.style.transform = 'translateY(-100%)';
        }
      } else {
        // ä¸Šã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«æ™‚ã¯è¡¨ç¤º
        header.style.transform = 'translateY(0)';
      }

      lastScrollY = currentScrollY;
    });

    // ãƒ˜ãƒƒãƒ€ãƒ¼ã¸ã®ãƒã‚¦ã‚¹ãƒ›ãƒãƒ¼æ™‚ã®å‡¦ç†
    header.addEventListener('mouseenter', () => {
      header.style.transform = 'translateY(0)';
    });

    // ãƒ˜ãƒƒãƒ€ãƒ¼ã‹ã‚‰ãƒã‚¦ã‚¹ãŒé›¢ã‚ŒãŸæ™‚ã®å‡¦ç†ï¼ˆã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«ä½ç½®ã«å¿œã˜ã¦ï¼‰
    header.addEventListener('mouseleave', () => {
      if (window.scrollY > scrollThreshold && lastScrollY > 0) {
        header.style.transform = 'translateY(-100%)';
      }
    });
  });
</script> 